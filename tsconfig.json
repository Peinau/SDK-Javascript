{
    "compilerOptions": {
        "target": "es5",
        "rootDir": "./src/",
        "outDir": "./dist/",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "inlineSources": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "preserveConstEnums": true
    },
    "typeRoots": [
        "node_modules/@types"
    ],
    "lib": [
        "es2016",
        "dom"
    ],
    "include": [
        "src/**/**.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}